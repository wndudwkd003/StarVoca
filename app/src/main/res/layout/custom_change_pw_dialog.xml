<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:padding="15dp"
    >

    <TextView
        android:fontFamily="@font/monoplex_medium"
        android:id="@+id/tv_title"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="비밀번호 변경"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_now_pw"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:fontFamily="@font/monoplex_medium"
        android:id="@+id/tv_now_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="현재 비밀번호"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/et_now_pw"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <EditText
        android:textColor="@color/black"
        android:id="@+id/et_now_pw"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_now_pw"
        android:background="@drawable/custom_bg_input_box"/>

    <TextView
        android:fontFamily="@font/monoplex_medium"
        android:id="@+id/tv_change_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="변경될 비밀번호"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/et_now_pw"
        app:layout_constraintTop_toBottomOf="@+id/et_now_pw" />

    <EditText
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:id="@+id/et_change_pw"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:inputType="textPassword"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_change_pw"
        android:background="@drawable/custom_bg_input_box"/>

    <TextView
        android:fontFamily="@font/monoplex_medium"
        android:id="@+id/tv_change_pw2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="변경될 비밀번호 확인"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/et_now_pw"
        app:layout_constraintTop_toBottomOf="@+id/et_change_pw" />

    <EditText
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:id="@+id/et_change_pw2"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:inputType="textPassword"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_change_pw2"
        android:background="@drawable/custom_bg_input_box"/>

    <TextView
        android:fontFamily="@font/monoplex_medium"
        android:id="@+id/tv_info"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_change_pw2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="#94000000"
        android:textSize="12sp"
        android:text="비밀번호는 대(소)문자, 특수문자를 포함한 6~18자로 구성되어야합니다."/>

    <Button
        android:fontFamily="@font/monoplex_medium"
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:text="비밀번호 변경하기"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#AFAFAF"
        app:layout_constraintEnd_toStartOf="@+id/btn_cancel"
        app:layout_constraintTop_toBottomOf="@+id/tv_info" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#AFAFAF"
        android:fontFamily="@font/monoplex_medium"

        android:text="취소"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@+id/et_change_pw2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_info" />


</androidx.constraintlayout.widget.ConstraintLayout>