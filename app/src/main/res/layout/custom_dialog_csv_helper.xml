<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="CSV 파일 도움말"
        android:fontFamily="@font/monoplex_medium"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_1"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        card_view:cardElevation="5dp"
        card_view:cardCornerRadius="10dp"
        card_view:contentPaddingBottom="10dp"
        card_view:contentPaddingLeft="5dp"
        card_view:contentPaddingRight="5dp"
        card_view:contentPaddingTop="5dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/iv_csv_helper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/csv_helper"/>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
    android:id="@+id/cv_2"
    app:layout_constraintTop_toBottomOf="@id/cv_1"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    card_view:cardElevation="5dp"
    card_view:cardCornerRadius="10dp"
    card_view:contentPaddingBottom="10dp"
    card_view:contentPaddingLeft="5dp"
    card_view:contentPaddingRight="5dp"
    card_view:contentPaddingTop="5dp"
    tools:ignore="MissingConstraints">

    <ImageView
        android:id="@+id/iv_csv_helper2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/csv_helper2"/>

</androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>